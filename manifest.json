{
  "manifest_version": 2,
  "name": "Circle Mouse Gestures",
  "version": "1.0",
  "description": "Circle mouse gestures",
  "default_locale": "en",
  "icons": {
    "96": "icons/cmg-logo-96.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/data/variables.js",
        "src/data/action-icons.js",
        "functions.js",
        "src/ui/circle.js",
        "src/ui/link-tooltip.js",
        "src/ui/rocker-icon.js",
        "index.js"
      ],
      "css": [
        "index.css"
      ],
      "run_at": "document_start"
    }
  ],
  "options_ui": {
    "page": "options/options.html",
    "browser_style": true,
    "chrome_style": true,
    "open_in_tab": false
  },
  "permissions": [
    "tabs",
    "storage",
    "sessions",
    "bookmarks",
    "clipboardWrite",
    "downloads"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "circle_mouse_gestures@emvaized.com"
    }
  }
}